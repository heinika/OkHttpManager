<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--tab的最大的宽度-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <!--tab指示标的颜色-->
        <!--<item name="tabIndicatorColor">#69f</item>-->
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">2dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <!--tab 选中时的颜色-->
        <!--<item name="tabSelectedTextColor">#69f</item>-->
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <!--Tab字体的默认的颜色-->
        <item name="android:textColor">#1d000000</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyPopup" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_out</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
